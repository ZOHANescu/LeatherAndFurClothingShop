   <children>
      <ImageView fx:id="productImage" fitHeight="362.0" fitWidth="225.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../products/leather1.JPG" />
         </image>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </ImageView>
      <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label fx:id="productNameLabel" text="&lt;Name&gt;">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <Label fx:id="productPriceLabel" text="&lt;Price&gt;">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</VBox>
